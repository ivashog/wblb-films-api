{
  "name": "wblb-films-api",
  "version": "1.0.2",
  "description": "REST API for WebbyLab test project",
  "author": "ivashkinog@gmail.com",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "start:prod:heroku": "node dist/main.js",
    "lint": "eslint \\\"{src,apps,libs,test}/**/*.ts\\\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version",
    "prisma": "dotenv -e development.env -- npx prisma",
    "prisma:generate": "npm run prisma -- generate",
    "prisma:generate:watch": "npm run prisma -- generate --watch",
    "prisma:save": "npm run prisma -- migrate save --experimental",
    "prisma:studio": "npm run prisma -- studio --experimental",
    "prisma:up": "npm run prisma -- migrate up --experimental",
    "seed": "ts-node prisma/_seeds/seed.ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/swagger": "^4.6.0",
    "@prisma/client": "2.6.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "enum-values": "^1.2.1",
    "faker": "^4.1.0",
    "helmet": "^3.23.3",
    "moment": "^2.27.0",
    "nestjs-prisma": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.1",
    "@nestjs/testing": "^7.4.4",
    "@prisma/cli": "^2.6.2",
    "@types/express": "^4.17.8",
    "@types/faker": "^4.1.12",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^24.9.1",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.6.3",
    "@types/supertest": "^2.0.10",
    "@types/yargs": "^15.0.5",
    "dotenv-cli": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^24.9.0",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "yargs": "^15.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
