{
  "name": "wblb-films-api",
  "version": "0.0.1",
  "description": "REST API for WebbyLab test project",
  "author": "ivashkinog@gmail.com",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "rimraf dist && nest build && ./node_modules/typeorm/cli.js --config ormconfig.js",
    "migration:create": "npm run typeorm -- migration:create -n",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migrate": "npm run typeorm -- migration:run -t=false",
    "migration:revert": "npm run typeorm -- migration:revert",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --class"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@nestjs/common": "^6.11.5",
    "@nestjs/config": "^0.2.3",
    "@nestjs/core": "^6.11.5",
    "@nestjs/platform-express": "^6.11.5",
    "@nestjs/swagger": "^4.2.3",
    "@nestjs/typeorm": "^6.2.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "enum-values": "^1.2.1",
    "faker": "^4.1.0",
    "helmet": "^3.21.2",
    "moment": "^2.24.0",
    "pg": "^7.18.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.1",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22",
    "typeorm-seeding": "^1.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.1",
    "@nestjs/schematics": "^6.9.1",
    "@nestjs/testing": "^6.11.5",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.9",
    "@types/hapi__joi": "^16.0.9",
    "@types/jest": "^24.9.1",
    "@types/multer": "^1.4.2",
    "@types/node": "^12.12.26",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
